<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet"/>
        <link rel="stylesheet" href="{{asset('css/style.css')}}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a href="{{path('main')}}" class="navbar-brand" >LaCaverne</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <form class="d-flex container-fluid" method="Post" action="{{path('main')}}">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search" value="{% if memory['search'] is defined %}{{memory['search']}}{% endif %}">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
                {% if not is_granted("IS_AUTHENTICATED_FULLY") %}
                    <a href="{{path('app_login')}}" class="ms-3 me-3">
                        <div class="nav-login">
                            <i style="font-size:35px" class="fa-solid fa-user-astronaut"></i>
                            <p>Sig in</p>  
                        </div>
                    </a>
                    <a href="{{path('app_register')}}" class="ms-3 me-3">
                        <div class="nav-login">
                            <i style="font-size:35px" class="fa-solid fa-user"></i>
                            <p>Sig up</p>  
                        </div>
                    </a>
                {% else %}
                    <a href="{{path('app_logout')}}" class="ms-3 me-3">
                        <div class="nav-login">
                            <i style="font-size:35px" class="fa-solid fa-user-astronaut"></i>
                            <p>Logout</p>
                        </div>
                    </a>
                {% endif %}
            </div>
        </nav>
        {% block body %}{% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>
